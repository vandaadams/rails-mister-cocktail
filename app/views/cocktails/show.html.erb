<h1><%= @cocktail.name %></h1>
<% if @cocktail.photo.attached? %>
    <%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
<% end %>
<% if @cocktail.description.empty? == false %>
  <h3>Description</h3>
  <p><%= @cocktail.description %></p>
<% end %>
<h3>Ingredients</h3>
<ul>
  <% @cocktail.doses.each do |dose| %>
  <li> <%= dose.ingredient.name.capitalize %> - <%= dose.description %>  <%= link_to "Delete", dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } %></li>
  <% end %>
</ul>
<p><%= link_to "Add a new ingredient", new_cocktail_dose_path(@cocktail) %></p>

