<div class="banner" style="background-image: url(<%= image_path "background.jpg" %>);">
</div>

  <div class="seach-bar">
    <%= form_tag cocktails_path, method: :get do %>
      <%= text_field_tag :query,
        params[:query],
        placeholder: "Find a cocktail"
      %>
      <%= submit_tag "Search" %>
    <% end %>
  </div>
<div class="container">
  <div class="cocktail-cards">
    <ul>
      <% @cocktails.each do |cocktail| %>
      <% if cocktail.photo.attached? %>
        <%= cl_image_tag cocktail.photo.key, height: 300, width: 400, crop: :fill %>
      <% end %>
      <li><%= link_to cocktail.name, cocktail_path(cocktail) %></li>
      <% end %>
    </ul>
  </div>
</div>
