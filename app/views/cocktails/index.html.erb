<div class="banner" style="background-image: url(<%= image_path "background.png" %>);">
</div>
<div class="container mb-5">
  <div class="search-bar mb-5">
    <form action="/cocktails" accept-charset="UTF-8" method="get">
      <input class="search-field" type="text" name="query" id="query" placeholder="Find a cocktail">
      <svg aria-hidden="true" focusable="false" data-prefix="fas" data-icon="search" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" class="o-15 absolute center-v right-1 pe-none svg-inline--fa fa-search fa-w-16 fa-fw fa-lg" style=""><path fill="currentColor" d="M505 442.7L405.3 343c-4.5-4.5-10.6-7-17-7H372c27.6-35.3 44-79.7 44-128C416 93.1 322.9 0 208 0S0 93.1 0 208s93.1 208 208 208c48.3 0 92.7-16.4 128-44v16.3c0 6.4 2.5 12.5 7 17l99.7 99.7c9.4 9.4 24.6 9.4 33.9 0l28.3-28.3c9.4-9.4 9.4-24.6.1-34zM208 336c-70.7 0-128-57.2-128-128 0-70.7 57.2-128 128-128 70.7 0 128 57.2 128 128 0 70.7-57.2 128-128 128z" class=""></path></svg>
    </form>
  </div>

  <div class="cocktail-cards">
    <% @cocktails.each do |cocktail| %>
    <div class="cocktail-card">
      <% if cocktail.photo.attached? %>
        <%= cl_image_tag cocktail.photo.key, height: 200, width: 200, crop: :fill %>
      <% end %>
      <p><%= link_to cocktail.name, cocktail_path(cocktail) %></p>
    </div>
    <% end %>
  </div>
</div>
